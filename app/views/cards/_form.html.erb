<%= simple_form_for @card ,defaults: { required: false } do |f| %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence %>
  <%= f.input :original_text, as: :string %>
  <%= f.input :translated_text, as: :string %>
  <%= f.input :review_date, as: :string, input_html: { value: Date.today}, readonly: true %>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>
